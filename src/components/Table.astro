---
import HeaderCell from "./HeaderCell.astro";
import BodyRow from "./BodyRow.astro";

import type { Hashtag } from "../lib/types";

interface Props {
  hashtags: Hashtag[];
}

const { hashtags } = Astro.props;
---

<table class="shadow-xl rounded table-fixed w-full md:w-auto">
  <thead>
    <tr>
      <HeaderCell>Hashtag</HeaderCell>
      <HeaderCell class="hidden md:table-cell">Posts / Views</HeaderCell>
      <HeaderCell>Popularity</HeaderCell>
    </tr>
  </thead>
  <tbody class="bg-white">
    {hashtags.map((hashtag) => <BodyRow hashtag={hashtag} />)}
  </tbody>
</table>
