---
import Layout from "../layouts/Layout.astro";
import CountryNav from "../components/CountryNav.astro";
import LandingPageTable from "../components/LandingPageTable.astro";
import { getAllHashtags } from "../db/client";

const hashtags = await getAllHashtags();
---

<Layout>
  <main>
    <main class="bg-slate-200 h-screen">
      <section
        class="container px-5 py-10 md:mx-auto md:flex md:flex-col md:items-center md:pt-20 text-xl"
      >
        <h1 class="font-bold text-4xl">TikTok Hashtags Going Viral Today</h1>
        <div class="my-12 max-w-[30rem] text-center">
          Get the full list for <CountryNav country={"xx"} />
        </div>

        <LandingPageTable hashtags={hashtags} />
      </section>
    </main>
  </main>
</Layout>
